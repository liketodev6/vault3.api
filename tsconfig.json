{
    "compilerOptions": {
        "module": "commonjs",
        "experimentalDecorators": true,
        "target": "es2016",
        "noImplicitAny": false,
        "sourceMap": false,
        "outDir": "build",
        "skipLibCheck": true
    },
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "**/*.test.ts"
    ],
    "include": [
        "src/**/*.ts"
    ]
}